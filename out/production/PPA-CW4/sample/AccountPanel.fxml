<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AccountPanelController">
   <left>
      <VBox fx:id="subPane" maxWidth="150.0" prefHeight="200.0" prefWidth="150.0" spacing="10.0" style="-fx-border-color: black; -fx-background-color: rgb(220,220,220);">
         <children>
            <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: rgb(180,180,180);">
               <children>
                  <Circle fx:id="profileCircle" fill="WHITE" radius="50.0" stroke="BLACK" strokeType="INSIDE" />
                  <Label fx:id="currentUsernameLabel">
                     <padding>
                        <Insets bottom="20.0" />
                     </padding>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#accountSettingsAction" text="Account settings" />
                  <Button mnemonicParsing="false" onAction="#accountDetailsAction" text="Account details" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </left>
</BorderPane>
