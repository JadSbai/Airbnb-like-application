<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>


<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Circle fx:id="profileCircle" fill="WHITE" radius="50.0" stroke="BLACK" strokeType="INSIDE" />
            <Label text="Username">
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </Label>
            <Button mnemonicParsing="false" text="Account settings" />
            <Button mnemonicParsing="false" text="Sign out" />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </top>
</BorderPane>
