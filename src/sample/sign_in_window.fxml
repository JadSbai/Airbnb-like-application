<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Please sign into your AirBnb London account.">
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </Label>
      <TextField promptText="Email:" />
      <PasswordField promptText="Password:" />
      <Button mnemonicParsing="false" text="Sign in" />
      <Hyperlink text="Don't have an account? Create one." />
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
